<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/item_rent_bg" >

    <ImageView
        android:id="@+id/iv_house_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_house_image" >

        <TextView
            android:id="@+id/house_name"
            style="@style/house_info_item_text_style"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dimen_5" />

        <TextView
            android:id="@+id/house_info"
            style="@style/house_info_item_text_style"
            android:layout_below="@+id/house_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dimen_5" />
    </RelativeLayout>

</RelativeLayout>