<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE583">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/bg_login_btn"
        android:onClick="checkUpdate"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="版本检测"
        android:textColor="#5E5E5E"
        android:textSize="20sp"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/layout_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_50"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            android:src="@drawable/icon_logo" />

        <TextView
            android:id="@+id/tv_current_version"
            style="@style/text_style"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="2.0.0"
            android:textSize="16sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_corp_desc"
        style="@style/text_style"
        android:layout_width="match_parent"
        android:layout_below="@+id/layout_version"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_50"
        android:text="      待命名隶属于深圳小易信息技术有限公司，是一个专注于为客户提供租赁及二手房交易服务的互联网O2O平台，公司成立于2016年2月，总部设在中国深圳市科技园。" />


    <TextView
        android:id="@+id/tv_website"
        style="@style/text_style"
        android:layout_below="@+id/tv_corp_desc"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_30"
        android:text="官方网站：www.ekeae.com" />

    <TextView
        android:id="@+id/tv_kefu"
        style="@style/text_style"
        android:layout_below="@+id/tv_website"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginTop="10dp"
        android:text="客服电话：4001234567" />


        <TextView
            style="@style/text_style"
            android:layout_below="@+id/tv_kefu"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_marginTop="10dp"
            android:text="微信关注：扫描下面二维码或搜索“待命名”" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dimen_20"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_barcode"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            android:scaleType="fitXY"
            android:src="@drawable/icon_gzh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Copyright @2016-2017\n深圳小易信息技术有限公司" />
    </LinearLayout>


</RelativeLayout>